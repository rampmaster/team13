{% extends "::base.html.twig" %}

{% set mainMenu = 'processes' %}

{% block content %}
<div class="contentTitle">
  <h1><span class="icon-cog"></span> Event Detail</h1>
  <h2><a href="{{ path('processes') }}">Processes</a> > <a href="{{ path('process_detail', { id : event.process.id }) }}">Process Detail</a> > Viewing event #{{ event.id }}</h2>  
</div>

<div class="contentButtons">
  <a href="{{ path('process_detail', { id : event.process.id }) }}"> <span class="iconf-left-bold"></span> Back to process detail </a>
</div>

<div class="contentBox">
  <table class="table" width="100%">
    <thead>
      <th>ID</th>
      <th>Data</th>
      <th>Log Date</th>
    </thead>
    <tbody>
      {% for detail in details %}
      <tr>
        <td class="tac">{{ detail.id }}</td>
        <td class="tac">
          <pre>{{ detail.data|wordwrap(80, "\r\n") }}</pre>
        </td>
        <td class="tac">{{ detail.logDate|date('d-m-Y H:i:s') }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endblock content %}