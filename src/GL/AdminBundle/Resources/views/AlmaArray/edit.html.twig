{% extends "::base.html.twig" %}

{% set mainMenu = 'admin' %}

{% block content %}
<div class="contentTitle">
  <h1><span class="icon-cog"></span> Admin</h1>
  <h2>Edit Array : {{ entity.name }}</h2>  
</div>

<div class="contentBox">
  <form action="{{ path('admin_array_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
      <button type="submit" class="btn">Save</button>
    </p>
  </form>

  <hr>
    
  <form action="{{ path('admin_array_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn sbtn">Delete</button>
  </form>

  <a href="{{ path('admin_array') }}">Back to the list</a>
</div>
{% endblock content %}